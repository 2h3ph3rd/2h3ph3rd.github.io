---
import "../styles/global.css";
---

<section class="flex w-full flex-1 items-center justify-center px-8">
  <div
    class="container mx-auto flex h-full flex-col items-center justify-between md:flex-row"
  >
    <!-- Left: Terminal Card -->
    <div class="mb-8 w-full md:mb-0 md:w-1/2">
      <div
        class="overflow-hidden rounded-xl bg-gray-900 font-mono text-gray-100 shadow-2xl"
      >
        <!-- Header -->
        <div class="flex items-center justify-between bg-gray-800 px-6 py-3">
          <span class="text-sm font-semibold text-gray-300">Terminal</span>
          <div class="flex space-x-3">
            <span class="h-4 w-4 rounded-full bg-green-500"></span>
            <span class="h-4 w-4 rounded-full bg-yellow-400"></span>
            <span class="h-4 w-4 rounded-full bg-orange-500"></span>
          </div>
        </div>

        <!-- Content -->
        <div
          class="relative w-full max-w-full space-y-3 overflow-hidden p-6 text-base"
        >
          <p class="animate-type w-full overflow-hidden whitespace-nowrap">
            <span class="text-primary">$</span> echo "Hi there! I'm Francesco ðŸ‘‹"
          </p>
          <p class="animate-type w-full overflow-hidden whitespace-nowrap">
            Hi there! I'm Francesco ðŸ‘‹
          </p>
          <p class="animate-type w-full overflow-hidden whitespace-nowrap">
            <span class="text-primary">$</span> ls -la
          </p>
          <pre
            class="animate-type w-full overflow-x-auto rounded-lg bg-gray-900 p-4 text-base">
total 12
drwxr-xr-x  4 user  staff  128 Aug 13 10:00 .
drwxr-xr-x 12 user  staff  384 Aug 13 09:50 ..
-rw-r--r--  1 user  staff   32 Aug 13 10:00 index.astro
-rw-r--r--  1 user  staff  256 Aug 13 09:59 README.md
          </pre>
        </div>
      </div>
    </div>

    <!-- Right: Image -->
    <div class="flex w-full justify-center px-24 md:w-1/2">
      <img
        src="header.svg"
        alt="Hero image"
        class="h-auto max-w-full rounded-lg"
      />
    </div>
  </div>
</section>

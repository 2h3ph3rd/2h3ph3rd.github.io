---
import "../styles/global.css";

export interface Props {
  title: string;
  description: string;
  link: string;
  website: string | undefined;
}

const { title, description, link, website } = Astro.props;
---

<div class="glassy-card relative flex w-full flex-col p-4 pb-14">
  <h3 class="mt-1 text-xl font-semibold text-gray-100">{title}</h3>
  <p class="mt-3 text-sm text-gray-300">{description}</p>

  <!-- Icons -->
  <div class="absolute bottom-4 left-4 flex space-x-4">
    <a href={link} target="_blank" rel="noopener noreferrer">
      <img src="/icons/github.webp" alt="GitHub" class="h-6" />
    </a>
    {
      website && (
        <a href={website} target="_blank" rel="noopener noreferrer">
          <img src="/icons/website.webp" alt="Website" class="h-6" />
        </a>
      )
    }
  </div>
</div>

---
import "../styles/global.css";
---

<div
  class="glassy-card top-6 mx-48 mt-6 flex flex-col items-start space-y-4 p-4 shadow-lg"
>
  <h5 class="text-2xl font-bold tracking-tight text-gray-100">Technologies</h5>

  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4">
    <!-- Single badge -->
    <div
      class="inline-flex items-center space-x-3 rounded-lg bg-gray-500 px-3 py-2 text-white shadow-md transition hover:bg-gray-700"
    >
      <img src="/icons/go.svg" alt="Go" class="h-6 w-6" />
    </div>

    <div
      class="inline-flex items-center space-x-3 rounded-xl bg-gray-500 px-3 py-2 text-white shadow-md transition hover:bg-gray-700"
    >
      <img src="/icons/redis.png" alt="Redis" class="h-6 w-6" />
    </div>

    <div
      class="inline-flex items-center space-x-3 rounded-lg bg-gray-500 px-3 py-2 text-white shadow-md transition hover:bg-gray-700"
    >
      <img src="/icons/postgres.png" alt="Postgres" class="h-6 w-6" />
    </div>
  </div>
</div>
